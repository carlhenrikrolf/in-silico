<PSICSRun   timeStep="0.02ms" runTime="1000ms" startPotential="-70mV"
	environment="environment"
	properties="membrane"
	access="recordri06dend"
	stochThreshold="0"
	quickChannels="false"
	morphology="ri06psics"
	activity="activity"
	repeats="1">
	
	<StructureDiscretization baseElementSize="10um"/>
	<info>Spruston CA1 pyramidal neuron (with Ih). Reproduces figure 8 and 9 from Cannon et al., PLoS Comp Biol (2010)</info>

